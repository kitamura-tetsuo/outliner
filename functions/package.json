{
  "name": "functions",
  "description": "Firebase Cloud Functions for Outliner",
  "scripts": {
    "lint": "eslint .",
    "serve": "firebase emulators:start --only auth,firestore,functions,hosting --project demo-test",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "build": "echo 'No build step required for JavaScript functions'",
    "debug": "firebase --debug emulators:start --inspect-functions=9229 --only auth,firestore,functions,hosting --project demo-test",
    "test": "mocha test/**/*.test.js --timeout 10000",
    "test:watch": "mocha test/**/*.test.js --timeout 10000 --watch",
    "test:coverage": "jest --coverage",
    "test:jest": "jest",
    "setup-cloud-tasks": "node scripts/setup-cloud-tasks.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "@fluidframework/azure-client": "^2.0.0",
    "@fluidframework/azure-service-utils": "^1.1.0",
    "@fluidframework/tinylicious-client": "^2.30.0",
    "@google-cloud/tasks": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.1",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "chai": "^4.3.10",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0"
  },
  "private": true
}