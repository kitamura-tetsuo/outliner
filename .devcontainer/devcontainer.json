docker// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript with Firebase Emulator",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspace",
	// 必要に応じてコンテナ作成後にコマンドを実行
	// "postCreateCommand": "cd client && npm install && cd ../server && npm install",
	// VS Code 機能をカスタマイズ
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-playwright.playwright",
				"svelte.svelte-vscode",
				"ms-vscode.vscode-websearchforcopilot",
				"ms-vscode.copilot-mermaid-diagram"
			]
		}
	},
	// Firebaseエミュレータ関連のポートを転送
	"forwardPorts": [
		4000,
		8080,
		9099
	],
	// node ユーザーとして接続
	"remoteUser": "node"
}