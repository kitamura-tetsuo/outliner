{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "@playwright/test"
            ],
            "groupName": "playwright",
            "groupSlug": "playwright"
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^.github/container/Dockerfile$"
            ],
            "matchStrings": [
                "FROM mcr.microsoft.com/playwright:(?<currentValue>v\\d+\\.\\d+\\.\\d+)-jammy"
            ],
            "depNameTemplate": "@playwright/test",
            "datasourceTemplate": "npm"
        }
    ]
}
