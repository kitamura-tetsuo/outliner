{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug SvelteKit Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev",
        "--",
        "--host",
        "0.0.0.0"
      ],
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "restart": true
    },
    {
      "name": "Kill Tinylicious Process",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/kill-tinylicious.js",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Launch Tinylicious",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "tinylicious"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Full-Stack: Server + Client",
      "configurations": [
        "Launch Tinylicious",
        "Debug SvelteKit Server",
        "Launch Chrome against localhost"
      ],
      "stopAll": true,
      "dependsOn": [
        "Kill Tinylicious Process"
      ]
    },
  ]
}