{
    "$schema": "https://unpkg.com/knip@latest/schema.json",
    // Add .svelte to entry points
    "entry": [
        "src/index.ts", // Existing entry
        "src/routes/**/*.svelte" // SvelteKit pages as entry points
    ],
    // Analyze .svelte mixed with .ts/.js in the entire project
    "project": [
        "src/**/*.{ts,js,svelte}"
    ],
    // (Optional) If you want to check exports of entry files themselves
    "includeEntryExports": true
}
