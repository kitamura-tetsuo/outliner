# .env.test
# テスト環境設定

# 環境設定
VITE_IS_TEST=true
VITE_IS_TEST_MODE_FORCE_E2E=true

# サーバー設定
VITE_HOST=localhost
VITE_PORT=7090
TEST_PORT=7090

# Firebase設定（テスト用）
VITE_FIREBASE_API_KEY=test-api-key
VITE_FIREBASE_AUTH_DOMAIN=test-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=test-project-id
VITE_FIREBASE_STORAGE_BUCKET=test-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=000000000000
VITE_FIREBASE_APP_ID=1:000000000000:web:0000000000000000000000
VITE_FIREBASE_MEASUREMENT_ID=G-TEST123456

# Azure Fluid Relay設定
# テスト環境では主にTinyliciousを使用

# 接続サービスの選択
VITE_USE_TINYLICIOUS=true
VITE_FORCE_AZURE=false

# 認証設定
VITE_USE_FIREBASE_AUTH=true
VITE_USE_API_AUTH=true

# API設定
VITE_API_SERVER_URL=http://localhost:7091
VITE_FIREBASE_FUNCTIONS_URL=http://localhost:57070
VITE_TOKEN_VERIFY_URL=http://localhost:7091/verify

# Tinylicious設定
VITE_TINYLICIOUS_HOST=localhost
VITE_TINYLICIOUS_PORT=7092
VITE_TINYLICIOUS_ENDPOINT=http://localhost:7092

# Firebase Emulator設定
VITE_USE_FIREBASE_EMULATOR=true
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=58080
VITE_AUTH_EMULATOR_PORT=59099
VITE_FIREBASE_EMULATOR_UI_PORT=54000

# テスト用ユーザー設定
VITE_DEBUG_USER_ID=test-user-id
VITE_DEBUG_USER_NAME="Test User"
VITE_DEBUG_USER_EMAIL=test@example.com

# Fluid Framework Telemetry設定
VITE_DISABLE_FLUID_TELEMETRY=true

# Yjs WebSocket server
VITE_YJS_WS_URL=ws://localhost:7093
# Disable live WS connection attempts during Playwright tests to suppress handshake 404 noise
VITE_YJS_DISABLE_WS=true
