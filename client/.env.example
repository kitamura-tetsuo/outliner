# Environment configuration
VITE_IS_TEST=false
VITE_IS_TEST_MODE_FORCE_E2E=false

# Local network host used by development scripts
LOCAL_HOST=localhost

# Server configuration
VITE_HOST=localhost
VITE_PORT=7070
TEST_PORT=7070

# Firebase configuration (Required)
# Please set values obtained from Firebase Console
# These values are required. The application will not start if they are not set.
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Azure Fluid Relay configuration
VITE_AZURE_TENANT_ID=your-tenant-id
VITE_AZURE_FLUID_RELAY_ENDPOINT=https://us.fluidrelay.azure.com

# Selection of connection service
# true: Use Tinylicious, false: Use Azure
VITE_USE_TINYLICIOUS=false
# Force use of Azure in development environment
VITE_FORCE_AZURE=true

# Authentication configuration
VITE_USE_FIREBASE_AUTH=true
VITE_USE_API_AUTH=true

# API configuration
VITE_API_BASE_URL=https://your-project.web.app
VITE_API_SERVER_URL=https://your-project.web.app
VITE_AZURE_FUNCTION_URL=https://your-project.web.app
VITE_FIREBASE_FUNCTIONS_URL=https://your-project.web.app
VITE_TOKEN_VERIFY_URL=http://localhost:3000/verify

# Tinylicious configuration
VITE_TINYLICIOUS_HOST=localhost
VITE_TINYLICIOUS_ENDPOINT=http://localhost:7072
VITE_TINYLICIOUS_PORT=7072
VITE_FLUID_TOKEN_KEY=your-token-key

# Firebase Emulator configuration (for test environment)
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=58080
VITE_AUTH_EMULATOR_PORT=59099
VITE_FIREBASE_EMULATOR_UI_PORT=54000

# Debug/Test configuration
VITE_DEBUG_USER_ID=your-debug-user-id
VITE_DEBUG_USER_NAME=Your Debug User
VITE_DEBUG_USER_EMAIL=debug@example.com

# Fluid Framework Telemetry configuration
VITE_DISABLE_FLUID_TELEMETRY=true
