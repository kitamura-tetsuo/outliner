rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny read/write access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read their own userContainers document
    match /userContainers/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Write is denied (handled by Functions)
    }

    // Allow users to read their own userProjects document (New collection name)
    match /userProjects/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }
  }
}
