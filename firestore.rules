rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny read/write access by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read/write their own userProjects document
    match /userProjects/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read projects
    match /projects/{projectId} {
      allow read: if request.auth != null;
      // write is restricted (usually handled by server API or specific owner check)
    }
  }
}
