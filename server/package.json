        "pino-pretty": "^13.0.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "chai": "^5.2.1",
        "dotenv": "^17.2.0",
        "jest": "^30.0.4",
        "mocha": "^11.7.1",
        "nodemon": "^3.1.10",
        "sinon": "^21.0.0",
        "supertest": "^7.1.3"
    },
    "jest": {
