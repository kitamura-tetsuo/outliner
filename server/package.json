{
    "name": "fluid-outliner-server",
    "version": "1.0.0",
    "description": "Authentication server for Fluid Outliner app",
    "main": "auth-service.js",
    "scripts": {
        "start": "node auth-service.js",
        "dev": "nodemon auth-service.js",
        "create-test-user": "node utils/create-test-user.js",
        "test": "mocha tests/**/*.test.js --timeout 10000",
        "test:emulator-wait": "mocha tests/auth-service-emulator-wait.test.js --timeout 10000",
        "test:coverage": "nyc mocha tests/**/*.test.js --timeout 10000"
    },
    "dependencies": {
        "@dotenvx/dotenvx": "^1.44.1",
        "@fluidframework/azure-client": "^2.42.0",
        "@fluidframework/azure-service-utils": "^2.42.0",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "find-process": "^1.4.7",
        "firebase-admin": "^11.8.0",
        "fs-extra": "^11.3.0",
        "jsonwebtoken": "^9.0.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "chai": "^5.2.0",
        "mocha": "^11.6.0",
        "nodemon": "^2.0.22",
        "nyc": "^15.1.0",
        "sinon": "^21.0.0",
        "supertest": "^7.1.1"
    },
    "nyc": {
        "all": true,
        "reporter": [
            "text",
            "lcov",
            "html"
        ],
        "report-dir": "./coverage/mocha",
        "include": [
            "auth-service.js",
            "utils/**/*.js"
        ],
        "exclude": [
            "tests/**",
            "scripts/**",
            "start-with-ngrok.js",
            "**/*.test.js",
            "**/*.spec.js"
        ]
    }
}
