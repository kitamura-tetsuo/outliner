    margin-bottom: 5px;
}

.source-page-link {
    color: #0078d7;
    text-decoration: none;
    font-weight: 500;
}

.source-page-link:hover {
    text-decoration: underline;
}

.backlink-context {
    font-size: 13px;
    color: #666;
    line-height: 1.4;
    white-space: pre-wrap;
    word-break: break-word;
}

:global(.highlight) {
    background-color: #fff3cd;
    padding: 0 2px;
    border-radius: 2px;
}
</style>

