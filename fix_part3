    background-color: #f5f5f5;
    border: none;
    text-align: left;
    cursor: pointer;
    font-size: 14px;
    transition: background-color 0.2s;
}

.backlink-toggle-button:hover {
    background-color: #e8e8e8;
}

.backlink-toggle-button.active {
    background-color: #e0e0e0;
}

.backlink-count {
    display: inline-flex;
    align-items: center;
