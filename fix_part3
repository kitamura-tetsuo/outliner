    background: none;
    border: none;
    color: #0078d7;
    cursor: pointer;
    font-size: 16px;
    padding: 4px 8px;
    border-radius: 4px;
}

.refresh-button:hover {
    background-color: #f0f0f0;
}

.backlink-loading,
.backlink-error,
.backlink-empty {
    display: flex;
    flex-direction: column;
